<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/button_main1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/button_main2"
        android:layout_below="@+id/button_main1"
        android:layout_alignEnd="@+id/button_main4" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/button_main3"
        android:layout_below="@+id/button_main2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/button_main4"
        android:layout_below="@+id/button_main3"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/button_main5"
        android:layout_below="@+id/button_main4"
        android:layout_alignStart="@+id/button_main4" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:id="@+id/button_main6"
        android:layout_below="@+id/button_main5"
        android:layout_alignStart="@+id/button_main5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome"
        android:id="@+id/textView_main1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
